<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="dialect">org.hibernate.dialect.OracleDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create</property>

		<mapping class="com.aditya.spring_rest_hibernate.entity.Advertise" />
		<mapping class="com.aditya.spring_rest_hibernate.entity.User" />
		<mapping class="com.aditya.spring_rest_hibernate.entity.Token" />
		<mapping class="com.aditya.spring_rest_hibernate.entity.Message" />

	</session-factory>
</hibernate-configuration>
